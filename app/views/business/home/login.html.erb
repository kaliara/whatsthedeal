<h1>Login to your Account</h1>

<p style="color: #E3A72A; font-size: 150%">Please bookmark this login page to access your WTD purchaser list in future!</p>

<% form_for @user_session, :url => user_session_path do |f| %>
  <%= display_error_messages(f.error_messages) %>
  <div class="label_input_form">
    <%= f.label :email %><br>
    <%= f.text_field :email, :tabindex => 1, :class => "text", :style => "width: 348px" %>
  </div>
  <div class="label_input_form">
    <%= f.label :password %><br>
    <%= f.password_field :password, :tabindex => 2, :class => "text" %>
  </div>
  <div class="label_input_form remember_me">
    <%= f.label :remember_me %>
    <%= f.check_box :remember_me, :tabindex => 3 %><br><br>
    <%= link_to "Forgot Password?", forgot_password_path, :class => 'forget_password' %>
  </div>
  <%= f.submit "Login", :class => "submit primary", :tabindex => 4 %>
<% end %>