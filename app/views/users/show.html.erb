            </tr>
            <tr>
              <td class="list_name"><strong>Southern Maryland</strong>: Bethesda, Chevy Chase, etc</td> <td class="checkboxes"><%= f.check_box :gets_md_daily_deal_email, :class => 'styled' %></td>
            </tr>
          </table>
        </div>
        <div class="overlay_submit"><%= f.submit "Save", :class => 'primary' %></div>
      <% end %>
    </div>
  </div>
  <script type="text/javascript" charset="utf-8">
    function showOverlay() {
      $('#overlay').fadeIn('slow'); 
    }
    function closeOverlay() {
      $('#overlay').fadeOut('slow');
      return false;
    }
    $('#overlay #overlay_close').click(closeOverlay)
    setTimeout(showOverlay, 750);
  </script>
<% end %>