<div class="section_element">
  <div class="section_header">
    <h3>Register for New Account</h3>
    </div>
  
  <div class="section_content">
    <% form_for @user do |f| %>
      <%= f.error_messages %>
      <div class="label_input_form">
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>
      <div class="label_input_form">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>
      <div class="label_input_form">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
      </div>

      <% f.fields_for :customer do |cf| %>
        <div class="label_input_form">
          <%= cf.label :first_name %>
          <%= cf.text_field :first_name %>
        </div>
        <div class="label_input_form">
          <%= cf.label :last_name %>
          <%= cf.text_field :last_name %>
        </div>
  
        <div class="label_input_form">
          <%= cf.label :newsletter_subscriber %>
          <%= cf.check_box :newsletter_subscriber, :checked => true %>
        </div>
      <% end %>
      
      <div class="form_action">
        <%= f.submit 'Create' %>
      </div>

    <% end %>

  </div>
</div>