<% content_for :sub_nav do %>
  <li><%= link_to 'Misc Listing', admin_miscs_path %></li>
<% end %>

<h2>Edit Misc Item</h2>

<% form_for([:admin,@misc]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :key %> 
    <%= f.text_field :key %><br><br>
  </p>
  <p>
    <%= f.label :value %><br />
    <%= f.text_area :value, :cols => 30, :rows => 20 %><br><br>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>