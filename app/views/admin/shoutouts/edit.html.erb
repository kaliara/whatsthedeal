<% content_for :sub_nav do %>
  <li><%= link_to 'Show this Shoutout', admin_shoutout_path(@shoutout) %></li>
  <li><%= link_to 'Shoutout Listing', admin_shoutouts_path %></li>
<% end %>

<%= render :partial => "/admin/shared/tiny_mce" %>

<h2>Editing Shoutout</h2>

<% form_for([:admin,@shoutout], :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :header %><br />
    <%= f.text_field :header %>
  </p>
  <br><br>
  <p>
    <%= f.label :image1, 'Main Image' %><br />
    <%= f.file_field :image1 %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 10, :cols => 100 %>
  </p>
  <br><br>
  <p>
    <%= f.label :rotation_start_date %><br />
    <%= f.datetime_select :rotation_start_date %>
  </p>
  <p>
    <%= f.label :rotation_end_date %><br />
    <%= f.datetime_select :rotation_end_date %>
  </p>
  <br><br>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>