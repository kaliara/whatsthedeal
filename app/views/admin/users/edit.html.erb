<% content_for :sub_nav do %>
  <li><%= link_to 'User Listing', admin_users_path %></li>
<% end %>

<h2>Editing User (not the same as customer)</h2>

<% form_for([:admin,@user]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :id %>: <strong><%= @user.id %></strong>
  </p>
  <br>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.text_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.text_field :password_confirmation %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>